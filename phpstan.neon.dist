includes:
  - vendor/bovigo/assert/src/main/resources/phpstan/bovigo-assert.neon
parameters:
  inferPrivatePropertyTypeFromConstructor: true
  level: max
  paths:
    - ./src/main/php
    - ./src/test/php
  excludes_analyse:
      # Those files contain explicit wrong doc comments for test purposes.
      - src/test/php/helper
  ignoreErrors:
    # can't annotate the property properly
    - '#Call to protected method evaluateWithPhpUnit\(\) of class bovigo\\callmap\\Verification#'
    - '#Call to protected method evaluateWithXpFrameworkCore\(\) of class bovigo\\callmap\\Verification#'
    # Explicit tests
    - '#Unable to resolve the template type T in call to method static method bovigo\\callmap\\NewInstance::of\(\)#'
    - '#static method bovigo\\callmap\\NewInstance<mixed>::of\(\) expects class-string<object>|object, int given#'
    - '#static method bovigo\\callmap\\NewInstance<mixed>::of\(\) expects class-string<DoesNotExist>|DoesNotExist, string given#'
    # We can create instances of a trait, but phpstan can't know as it's not a "correct" PHP type
    - '#Property bovigo\\callmap\\TraitTest::\$proxy has invalid type bovigo\\callmap\\helper\\SomeTrait#'
